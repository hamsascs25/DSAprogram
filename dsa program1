#include <stdio.h>
#define MAX 5

int stack[MAX];
int top = -1;

void push(int x)
{
    if (top == MAX - 1)
        printf("Stack Overflow: Cannot push element\n");
    else
    {
        stack[++top] = x;
        printf("Element %d pushed into stack\n", x);
    }
}

void pop()
{
    if (top == -1)
        printf("Stack Underflow: Cannot pop element\n");
    else
        printf("Element %d popped from stack\n", stack[top--]);
}

void display()
{
    if (top == -1)
        printf("Stack is empty\n");
    else
    {
        printf("Stack elements are: ");
        for (int i = top; i >= 0; i--)
            printf("%d ", stack[i]);
        printf("\n");
    }
}

int main()
{
    int choice, x;

    while (1)
    { printf("Hamsa S");
        printf("\n1.Push\n2.Pop\n3.Display\n4.Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        if (choice == 1)
        {
            printf("Enter element to push: ");
            scanf("%d", &x);
            push(x);
        }
        else if (choice == 2)
            pop();
        else if (choice == 3)
            display();
        else if (choice == 4)
            return 0;
        else
            printf("Invalid choice\n");
    }
}
